# ChatFlect Environment Configuration
# Copy to .env and fill in values
# NEVER commit .env to version control

# Application
APP_ENV=development
APP_DEBUG=false

# Database
DB_HOST=localhost
DB_USER=chatflect_user
DB_PASS=CHANGE_ME
DB_NAME=chatflect_db

# Firebase
FIREBASE_PROJECT_ID=chatflect
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# FCM Push Notifications
FCM_SERVER_KEY=CHANGE_ME

# Admin API
ADMIN_API_TOKEN=CHANGE_ME_IN_PRODUCTION
ADMIN_IP_ALLOWLIST=127.0.0.1,::1

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Kill Switches (emergency)
DISABLE_SEND=false
DISABLE_PULL=false
DISABLE_PUSH=false
